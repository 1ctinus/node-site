{
    "env": {
        "node": true,
        "es2021": true,
        "amd": true,
        "browser": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "indent": [
            "warn",
            2
        ],
        "linebreak-style": [
            "warn",
            "unix"
        ],
        "quotes": [
            "warn",
            "double"
        ],
        "semi": [
            "warn",
            "never"
        ],
        "space-before-function-paren": [
            "warn",
            "never"
        ],
        // "camelcase": [
        //     "warn",
        //     "always"
        // ],
        "strict": [
            "warn",
            "global"
        ],
        "keyword-spacing": ["warn", { "after": true }]
    }
}